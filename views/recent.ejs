<%include header%>
    <div class="container py-5">
      <div class="card border-0">
        <div class="row">
          <div class="col-md-4">
           <img src="../announcement.jpg" class="float-right"  height="175px" width="248px">
          </div>
          <div class="col-md-8 p-4 my-auto">
            <div class="card-block px-3">
              <h4><%=recent.title%></h4>
              <p class="small"><%=recent.createdAt.getDate() + "/" + (recent.createdAt.getMonth() + 1) + "/" + recent.createdAt.getFullYear()%></p>
              <p><%-recent.description%></p>
              <h6>Download Links:</h6>
              <p class="card-text">
                <%recent.pdf.forEach(function(x){%>
              <li>
              <a style="color: green" href="/files/recent-announcements/<%=x.filename%>" target="_blank"><%=x.filename%></a>
              </li>
                <%})%>
            </div>
          </div>
        </div>
    </div>
</p>
</div>
</div>
</div>
</div>
</div>
    <%include footer%>

   