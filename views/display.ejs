<%include header%>
<div class="container text-center">
<h2 class="my-3 text-capitalize"><%=name%></h2>
      <div class="row">
      	<%entities.forEach(function(entity){%>
         <div class="col-md-3 " style="font-size: 16px"  style="box-shadow:0px 0px 9px 0px #9e9a9a6e !important">
            <a style="text-decoration: none;color:#000;" href="/<%=entity.type%>/<%=entity._id%>" class="m-1">
               <div class="tab">
                  <div class="news-img">
                     <img
                     src="/files/events/<%=entity.photo%>"
                     alt="img" class="" height="175px" width="248px">
                  </div>
               </div>
               <br>
               <div class="container">
                  <p class="h5 text-left"><%=entity.title%></p>

                  <h5 class="block-text text-left " style="font-weight: 300; letter-spacing: 1.1px; font-size: 14px !important ; color: #a7a7a7;">
                  <%-entity.description%>
                  </h5>
               <div class="date-time text-left">
                  <h1
                  style="text-transform: uppercase; font-size: 10px;letter-spacing: 4px; word-spacing: 1px; color: #000; font-weight: 600">
                  <%=entity.createdAt.getDate() + "/" + (entity.createdAt.getMonth() + 1) + "/" + entity.createdAt.getFullYear()%></h1>
                  <p class="float-right" style="font-size:12px;">Read more</p>
               </div>
               </div>
            </a>
         </div>
         <%})%>
      </div>
   </div>
<%include footer%>